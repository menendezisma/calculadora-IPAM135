<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/tvResul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:background="#534D4D"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:textSize="50pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <Button
                android:id="@+id/btnC"
                android:text="C"
                android:onClick="resetear"
                android:textSize="25dp"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/igual"
                />
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:textSize="25dp"
                android:onClick="borraNum"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:backgroundTint="@color/botones"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnMenos"
                android:text="+/-"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:backgroundTint="@color/botones"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnDiv"
                android:text="/"
                android:textSize="25dp"
                android:backgroundTint="@color/botones"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:onClick="eventOperar"
                android:layout_marginRight="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnResta"
                android:text="-"
                android:textSize="25dp"
                android:backgroundTint="@color/botones"
                android:onClick="eventOperar"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="30pt"
                android:textSize="25dp"
                android:backgroundTint="@color/botones"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="eventOperar"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btnMulti"
                android:text="x"
                android:backgroundTint="@color/botones"
                android:textSize="25dp"
                android:onClick="eventOperar"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnPunto"
                android:text="."
                android:textSize="25dp"
                android:onClick="editNumber"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnPorcentaje"
                android:onClick="porcentaje"
                android:text="%"
                android:textSize="25dp"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                />
            <Button
                android:id="@+id/btnIgual"
                android:text="="
                android:textSize="25dp"
                android:onClick="eventIgual"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/igual"
                />
        </TableRow>

    </TableLayout>


</LinearLayout>